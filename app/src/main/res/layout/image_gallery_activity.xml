<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/image_gallery_activity_add_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Copy the url here" />

    <EditText
        android:id="@+id/image_gallery_activity_name_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_gallery_activity_add_url"
        android:hint="Name url" />

    <Button
        android:id="@+id/image_gallery_activity_adding_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_gallery_activity_name_url"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Add image url" />

    <ImageButton
        android:id="@+id/image_gallery_activity_gallery_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gallery" />

</RelativeLayout>