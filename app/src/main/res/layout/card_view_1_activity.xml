<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1_activity_card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/red"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="8dp"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/card_view_1_activity_image"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/card_view_1_activity_title"
                    android:src="@drawable/sakuragi"
                    />

                <TextView
                    android:id="@+id/card_view_1_activity_description"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_below="@id/card_view_1_activity_image"
                    android:text="@string/description"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/card_view_1_activity_border"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_below="@id/card_view_1_activity_image"
                    android:background="@color/black"
                    />

                <TextView
                    android:id="@+id/card_view_1_activity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="@string/title"
                    />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/card_view_1_activity_title"
                    android:src="@drawable/sakuragi"
                    />

                <TextView
                    android:id="@+id/card_view_1_activity_description2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_alignTop="@id/card_view_1_activity_description"
                    android:layout_toRightOf="@id/card_view_1_activity_description"
                    android:text="@string/description2"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>